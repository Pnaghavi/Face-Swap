<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/layout1">

    <Button
            android:text="take Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnnTakePic" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:onClick="btnTakePicClick" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:name="com.example.howyoulookbald.takePicBtn"
            android:id="@+id/frgTakePic" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="250dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnnTakePic"
            app:layout_constraintTop_toTopOf="@+id/btnnTakePic"/>

</android.support.constraint.ConstraintLayout>